<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'Home' %></title>
<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(150deg, #f8fafc 0%, #f1f5f9 100%);
    color: var(--text);
    min-height: 100vh;
    margin: 0;
    padding-top: 70px;
  }
</style>
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <!-- Styles -->
  <link rel="stylesheet" href="/main.css" />
  <link rel="stylesheet" href="/create.css" />
  <link href="/output.css" rel="stylesheet" />
</head>
<body class="font-[Poppins] bg-white dark:bg-gray-900 text-gray-800 dark:text-white">

  <!-- Navbar (never touched) -->
  <%- include('components/navbar') %>

  <!-- Body Loading Spinner (hidden by default) -->
  <div id="bodyLoader" class="hidden fixed top-[50%] left-[50%] -translate-x-1/2 -translate-y-1/2 z-50">
    <div class="flex flex-row gap-2">
      <div class="w-4 h-4 rounded-full bg-blue-700 animate-bounce"></div>
      <div class="w-4 h-4 rounded-full bg-blue-700 animate-bounce [animation-delay:-.3s]"></div>
      <div class="w-4 h-4 rounded-full bg-blue-700 animate-bounce [animation-delay:-.5s]"></div>
    </div>
  </div>

  <!-- Page Content with fade effect -->
  <main id="mainContent" class="transition-opacity duration-300">
    <%- body %>
  </main>

  <!-- Footer -->
  <% if (role !== 'admin') { %>
    <%- include('components/footer') %>
  <% } %>

  <!-- Body Transition Loader Script -->
  <script>
    const content = document.getElementById('mainContent');
    const loader = document.getElementById('bodyLoader');

    // Simulate transition trigger on body change (example navigation)
    document.addEventListener('DOMContentLoaded', () => {
      loader.classList.remove('hidden');
      content.classList.add('opacity-0');

      setTimeout(() => {
        loader.classList.add('hidden');
        content.classList.remove('opacity-0');
      }, 400); // adjust timing if needed
    });
  </script>

</body>
</html>
