<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>
  <link href="./output.css" rel="stylesheet" />
  <!-- Include Ionicons for icons -->
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
</head>
<body>
  <div class="flex items-center justify-center min-h-screen bg-gradient-to-br from-[#f8b102] to-[#ff6b6b] dark:from-gray-900 dark:to-gray-800">
    <div class="relative bg-white dark:bg-gray-800 shadow-2xl rounded-2xl p-10 max-w-md w-full mx-4 backdrop-blur-lg overflow-hidden">
      <!-- Decorative background elements -->
      <div class="absolute -top-32 -right-32 w-64 h-64 bg-[#ffd70033] rounded-full blur-xl"></div>
      <div class="absolute -bottom-32 -left-32 w-64 h-64 bg-[#ff6b6b33] rounded-full blur-xl"></div>
      
      <div class="relative z-10">
        <!-- Animated logo/icon -->
        <div class="mb-8 flex justify-center">
          <div class="p-4 bg-gradient-to-br from-[#f8b102] to-[#ff6b6b] rounded-2xl shadow-lg animate-bounce">
            <ion-icon name="lock-closed" class="text-4xl text-white"></ion-icon>
          </div>
        </div>

        <h1 class="text-4xl font-bold text-center bg-gradient-to-r from-[#f8b102] to-[#ff6b6b] bg-clip-text text-transparent mb-8 animate-pulse">
          Welcome Back
        </h1>

        <form action="/login" method="POST" class="space-y-6" >
          <!-- Floating Input Fields -->
          <div class="relative group">
            <input type="email" name="email" required 
                   class="w-full px-4 py-3 bg-transparent border-2 border-gray-300 rounded-lg focus:outline-none 
                          focus:border-[#f8b102] transition-all duration-300 peer dark:border-gray-600 dark:text-white"
                   placeholder=" ">
            <label class="absolute left-4 top-3 px-1 bg-white dark:bg-gray-800 text-gray-500 dark:text-gray-300 
                          transition-all duration-300 peer-focus:-top-2 peer-focus:text-sm peer-focus:text-[#f8b102]
                          peer-placeholder-shown:top-3 peer-placeholder-shown:text-base">
              Email Address
            </label>
          </div>

          <div class="relative group">
            <input type="password" name="password_hash" required 
                   class="w-full px-4 py-3 bg-transparent border-2 border-gray-300 rounded-lg focus:outline-none 
                          focus:border-[#f8b102] transition-all duration-300 peer dark:border-gray-600 dark:text-white"
                   placeholder=" ">
            <label class="absolute left-4 top-3 px-1 bg-white dark:bg-gray-800 text-gray-500 dark:text-gray-300 
                          transition-all duration-300 peer-focus:-top-2 peer-focus:text-sm peer-focus:text-[#f8b102]
                          peer-placeholder-shown:top-3 peer-placeholder-shown:text-base">
              Password
            </label>
          </div>

          <!-- Animated Submit Button -->
          <button type="submit"
                  class="w-full py-3 px-6 bg-gradient-to-r from-[#f8b102] to-[#ff6b6b] text-white font-semibold 
                        rounded-lg transform transition-all duration-300 hover:scale-105 hover:shadow-lg 
                        active:scale-95 flex items-center justify-center gap-2">
            <ion-icon name="arrow-forward" class="text-xl"></ion-icon>
            Sign In
          </button>
        </form>

        <!-- Social Login Options -->
        <div class="mt-8">
          
        </div>

        <!-- Signup Link -->
        <div class="mt-8 text-center">
          <p class="text-gray-600 dark:text-gray-300">
            New here? 
            <a href="/signup" class="text-[#f8b102] font-semibold hover:underline underline-offset-4">
              Create an account
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</body>
</html>