<%- include('../components/navbar') %>

<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-4">Manage Categories</h1>
  
  <!-- Categories Table -->
  <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
    <thead>
      <tr>
        <th class="py-2 px-4 text-left">Category Name</th>
        <th class="py-2 px-4 text-left">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(category => { %>
        <tr>
          <td class="py-2 px-4"><%= category.name %></td>
          <td class="py-2 px-4">
            <a href="/admin/editcategory/<%= category.id %>" class="text-blue-500">Edit</a> | 
            <a href="/admin/deletecategory/<%= category.id %>" class="text-red-500">Delete</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../components/footer') %>
