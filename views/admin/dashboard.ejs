<%- include('../components/sidebar') %>
<div class="flex flex-col ml-64 p-4">
  <h1 class="text-3xl font-bold mb-4">Admin Dashboard</h1>
  
  <!-- Display any flash messages -->
  <div class="mb-4">
    <% if (success) { %>
      <div class="bg-green-500 text-white p-2 rounded">
        <%= success %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="bg-red-500 text-white p-2 rounded">
        <%= error %>
      </div>
    <% } %>
  </div>

  <!-- List of Posts -->
  <h2 class="text-2xl font-semibold mb-4">Recent Posts</h2>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded-lg">
      <thead>
        <tr>
          <th class="py-2 px-4 border-b">Post Title</th>
          <th class="py-2 px-4 border-b">Category</th>
          <th class="py-2 px-4 border-b">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% posts.forEach(post => { %>
          <tr>
            <td class="py-2 px-4 border-b"><%= post.title %></td>
            <td class="py-2 px-4 border-b"><%= post.category ? post.category.name : 'Uncategorized' %></td>
            <td class="py-2 px-4 border-b">
              <a href="/admin/edit-post/<%= post.id %>" class="text-blue-500">Edit</a>
              <form action="/admin/delete-post/<%= post.id %>" method="POST" class="inline">
                <button type="submit" class="text-red-500">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

